{
  "name": "mixin-node-sdk",
  "description": "Node.js SDK for Mixin Network",
  "version": "0.1.0",
  "author": "wangshijun <wangshijun2010@gmail.com>",
  "bugs": {
    "url": "https://github.com/wangshijun/mixin-node-sdk/issues",
    "email": "wangshijun2010@gmail.com"
  },
  "contributors": [
    "wangshijun <wangshijun2010@gmail.com>"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "int64-buffer": "^0.1.10",
    "jsonwebtoken": "^8.3.0",
    "ws": "^5.2.2"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "auto-bind": "^1.1.0",
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "debug": "^3.1.0",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "xo": "latest"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/wangshijun/mixin-node-sdk",
  "keywords": [
    "mixin",
    "blockchain",
    "lass",
    "node.js",
    "crypto"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier",
      "git add"
    ]
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wangshijun/mixin-node-sdk"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "unicorn/number-literal-case": "off",
      "prettier/prettier": [
        "error",
        {
          "printWidth": 240,
          "tabWidth": 2,
          "trailingComma": "es5",
          "jsxBracketSameLine": true,
          "semi": true,
          "singleQuote": true,
          "bracketSpacing": true
        }
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  }
}
